<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{ title }}</title>
  <link rel="stylesheet" href="/styles.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flickity@2/dist/flickity.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Caveat&display=swap" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/flickity@2/dist/flickity.pkgd.min.js"></script>
  <script src="/js/burger.js"></script>
</head>
<body>
  {% include "header.njk" %}

  <main>
    {% if gallery and gallery.length > 0 %}
      <div class="gallery-container">
        <div class="gallery js-flickity" data-flickity='{ 
          "wrapAround": true, 
          "pageDots": true, 
          "cellAlign": "center", 
          "contain": false, 
          "imagesLoaded": true, 
          "groupCells": false, 
          "selectedAttraction": 0.075, 
          "friction": 0.9 {% if gallery.length > 1 %},
          "prevNextButtons": true{% else %},
          "prevNextButtons": false{% endif %}
        }'>
          {% for image in gallery %}
            <div class="gallery-cell">
              <img src="{{ image }}" alt="{{ title }} image {{ loop.index }}" />
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}

    <article class="project-page">
      <div class="project-columns">
        <!-- Column 1: Title and Description -->
        <div class="project-column">
          <h1 class="project-title">{{ title }}</h1>
          {% if summary %}
            <p class="project-summary">{{ summary }}</p>
          {% endif %}
        </div>

        <!-- Column 2: Project Text -->
        <div class="project-column">
          <div class="project-body">
            {{ content | safe }}
          </div>
        </div>
      </div>
    </article>
  </main>

  {% include "footer.njk" %}
</body>
</html>
