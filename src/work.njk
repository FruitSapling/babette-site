<div class="work-grid">
  {% for project in collections.projects %}
    <a class="card" href="{{ project.url }}">
      <img src="{{ project.data.cover }}" alt="{{ project.data.title }}">
      <h2>{{ project.data.title }}</h2>
      <p>{{ project.data.summary }}</p>
    </a>
  {% endfor %}
</div>